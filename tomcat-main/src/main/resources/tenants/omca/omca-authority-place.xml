<record id="place" is-extension="true">
    <services-record-path id="omca">places_omca:http://collectionspace.org/services/place/local/omca,places_omca</services-record-path>
    <section id="placeAuthorityInformation">
        <field id="placeType" autocomplete="vocab-placeType" ui-type="enum" ui-search="repeatable">
            <!-- removing options block; adding vocab-placeType vocab -->
            <options action='delete'/>
        </field>
        <field id="placeSource" autocomplete="citation-citation">
            <!-- adding citation authority vocab -->
        </field>
        <field id="legacyArgusNotes" section="omca"></field>
        <field id="legacyParents" section="omca"></field>
        <field id="legacySeeAlso" section="omca"></field>
    </section>
    <section id="localityInformation">
        <field id="vCoordSys" autocomplete="vocab-vcoordsys" ui-type="enum">
            <!-- adding vcoordsys authority; deleting options list -->
            <options action="delete" />
        </field>
        <field id="vSpatialReferenceSystem" autocomplete="vocab-vspatialreferencesystem" ui-type="enum">
            <!-- adding vspatialreferencesystem authority; deleting options list -->
            <options action="delete" />
        </field>
        <field id="vCoordSource"/>
        <field id="vCoordSourceRefId"/>
        <field id="vUnitofMeasure" autocomplete="vocab-vunitofmeasure" ui-type="enum">
            <!-- adding vunitofmeasure authority; deleting options list -->
            <options action="delete" />
        </field>
    </section>
    <section id="geoReferenceInformation">
        <repeat id="placeGeoRefGroupList/placeGeoRefGroup">
            <field id="geodeticDatum" autocomplete="vocab-geodeticdatum" ui-type="enum">
                <!-- adding geodeticdatum authority; deleting options list -->
                <options action="delete" />
            </field>
            <field id="geoRefProtocol" autocomplete="vocab-georefprotocol" ui-type="enum">
                <!-- adding georefprotocol authority; deleting options list -->
                <options action="delete" />
            </field>
            <field id="geoRefVerificationStatus" autocomplete="vocab-georefverificationstatus" ui-type="enum">
                <!-- adding georefverificationstatus authority; deleting options list -->
                <options action="delete" />
            </field>
        </repeat>
    </section>
</record>
<!--
    This file contains modifications to settings.xml for this tenant. Changes to settings
    for a specific host on which this tenant is installed (e.g. dev vs. production) should
    be made in host-settings.xml.
-->

<settings>
    <admin>
        <username>admin@museumca.org</username>
        <tenant>35</tenant>
        <tenantname>omca</tenantname>
        <cookievalidformins>60</cookievalidformins>
    <!-- Cache settings can be found in cache-settings.xml -->
    </admin>
    <email>
        <baseurl>http://localhost:@JEE_PORT@</baseurl>
        <from>admin@museumca.org</from>
        <to></to>
        <!-- if specified then all emails will send to this address - used for debugging -->
        <smtp>
            <host>localhost</host>
            <port>25</port>
            <debug>${CSPACE_CORE_EMAIL_AUTH_DEBUG_OPT}</debug>
            <auth enabled="true">
                <!-- set to true if wish to use auth -->
                <username>${CSPACE_CORE_EMAIL_AUTH_USERNAME_OPT}</username>
                <password>${CSPACE_CORE_EMAIL_AUTH_PASSWORD_OPT}</password>
            </auth>
        </smtp>
        <passwordreset>
            <token>
                <!-- <daysvalid>1</daysvalid> --> <!-- As of v5.0, this field is no longer used. -->
                <tokenExpirationSeconds>300</tokenExpirationSeconds>
            </token>
            <loginpage>/cspace/core/resetpw</loginpage>
            <subject>CollectionSpace password reset</subject>
            <message>Hello {{greeting}},\n\rYou've started the process to reset your CollectionSpace account password.\n\rTo finish resetting your password, go to the Reset Password page on CollectionSpace using this link: {{link}}.\n\r\n\rPlease do not reply to this email. This mailbox is not monitored and you will not receive a response. For assistance, contact your CollectionSpace administrator directly.</message>
        </passwordreset>
    </email>
    <persistence>
        <service>
            <url>http://localhost:@JEE_PORT@/cspace-services</url>
            <tenant>
                <id>35</id>
                <name>museumca.org</name>
                <version>0.1</version>
                <display-name>Collectionspace OMCA Tenant</display-name>
                <create-disabled>false</create-disabled>
            </tenant>
            <repository>
                <domain>omca-domain</domain>
                <name>omca_domain</name>
                <client>nuxeo-java</client>
                <dateformats>
                    <pattern>MM/dd/yyyy</pattern>
                    <pattern>MMM dd, yyyy</pattern>
                    <pattern>dd.MM.yyyy</pattern>
                </dateformats>
                <languages>
                    <language>en</language>
                </languages>
                <indexHandler>org.collectionspace.services.common.init.AddIndices</indexHandler>
            </repository>
            <ims-url>/collectionspace/tenant/omca/</ims-url> <!-- XXX should be in separate IMS section -->
        </service>
    </persistence>
    <ui>
        <web>
            <login-dest>/collectionspace/ui/omca/html/findedit.html</login-dest>
            <login-failed-dest>/collectionspace/ui/omca/html/index.html</login-failed-dest>
            <front-page>/collectionspace/ui/omca/html/index.html</front-page>
            <find-page>myCollectionSpace</find-page>
            <tmp-schema-path />
            <mappings>
                <map id="record">
                    <recordtype>record</recordtype>
                    <file>/omca/html/record.html</file>
                </map>
                <map id="authority">
                    <recordtype>authority</recordtype>
                    <file>/omca/html/record.html</file>
                    <configure>
                        <meta id="recordType">{instance/web-url}</meta>
                    </configure>
                </map>
                <map id="procedure">
                    <url></url>
                    <recordtype>procedure</recordtype>
                    <file>/omca/html/record.html</file>
                    <configure>
                        <meta id="title">OMCA CollectionSpace - {record/web-url}</meta>
                    </configure>
                </map>
            </mappings>
        </web>
    </ui>
</settings>